---
// ContactSection.astro - Sección de contacto premium para AlphaMen
import '../styles/contact-section.css';

---


<section class="contact-section" id="contact">
    <!-- Background Flashes -->
    <div class="contact-flashes-container">
      <div class="contact-flash"></div>
      <div class="contact-flash"></div>
      <div class="contact-flash"></div>
      <div class="contact-flash"></div>
      <div class="contact-flash"></div>
      <div class="contact-flash"></div>
      <div class="contact-flash"></div>
      <div class="contact-flash"></div>
      <div class="contact-flash"></div>
      <div class="contact-flash"></div>
    </div>
  
    <!-- Diagonal Lines Decoration -->
    <div class="diagonal-line diagonal-line-1"></div>
    <div class="diagonal-line diagonal-line-2"></div>
    
    <div class="contact-content">
      <!-- Header Section -->
      <div class="contact-header">
        <h2 class="contact-title">Get in Touch</h2>
        <p class="contact-subtitle">
          Ready to experience the ultimate entertainment? Contact us today to book 
          your exclusive AlphaMen performance.
        </p>
      </div>
  
      <!-- Contact Cards Container -->
      <div class="contact-cards">
        <!-- Phone Card -->
        <div class="contact-card">
          <div class="contact-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
          </div>
          <h3 class="contact-card-title">Phone</h3>
          <a href="tel:+610424966041" class="contact-link">+61 042 496 6041</a>
          <p class="contact-card-text">Available 24/7 for bookings</p>
        </div>
  
        <!-- Email Card -->
        <div class="contact-card">
          <div class="contact-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
          <h3 class="contact-card-title">Email</h3>
          <a href="mailto:alphamenaustralia@gmail.com" class="contact-link">alphamenaustralia@gmail.com</a>
          <p class="contact-card-text">We'll respond within 24 hours</p>
        </div>
  
        <!-- Social Card -->
        <div class="contact-card">
          <div class="contact-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </div>
          <h3 class="contact-card-title">Follow Us</h3>
          <a 
    href="https://www.instagram.com/alphamenaustralia/" 
    class="contact-link"
    target="_blank"
    rel="noopener noreferrer"
  >
    @Alphamenaustralia
  </a>
          <p class="contact-card-text">Stay updated on social media</p>
        </div>
      </div>
  
      <!-- CTA Buttons -->
      <div class="contact-cta-container">
        <a 
          href="https://wa.me/61412345678?text=Hi%20AlphaMen!%20I'm%20interested%20in%20booking%20a%20performance." 
          class="cta-button-ctasection cta-whatsapp"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
          Chat on WhatsApp
        </a>
  
        <a href="mailto:contact@alphamen.com.au" class="cta-button-ctasection cta-email">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          Send Email
        </a>
      </div>
  
      <!-- Footer Note -->
      <div class="contact-footer">
        <p>Professional entertainment services across Australia</p>
        <p class="contact-footer-small">Bookings • Private Events • Corporate Functions</p>
      </div>
    </div>
  </section>
  
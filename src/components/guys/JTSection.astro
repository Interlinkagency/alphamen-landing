---
// JTSection.astro - Sección del performer JT (Santa Claus Theme)
import '../../styles/guys/jt-section.css';
---


<section class="guy-section jt" id="jt">
    <!-- Overlay para transición -->
    <div class="section-overlay"></div>
    
    <!-- Background Flashes for Text Area -->
    <div class="text-flashes-container">
      <div class="text-flash"></div>
      <div class="text-flash"></div>
      <div class="text-flash"></div>
      <div class="text-flash"></div>
      <div class="text-flash"></div>
      <div class="text-flash"></div>
      <div class="text-flash"></div>
      <div class="text-flash"></div>
    </div>
    
    <div class="guy-content scroll-reveal">
      <!-- Text Section (LEFT) -->
      <div class="guy-text-container">
        <div class="guy-header">
          <h2 class="guy-name">JT</h2>
          <h3 class="guy-role">Australian pole dancer champion</h3>
        </div>
        
        <p class="guy-description">
          Meet JT, our Australian pole dancer champion and our jolly Santa who brings festive cheer and naughty surprises 
          to every performance. With his commanding presence and holiday spirit, he 
          delivers shows that are both playful and irresistible. Whether it's a 
          Christmas-themed event or an evening of seasonal magic, JT knows how to 
          make your wildest holiday wishes come true.
        </p>
        
        <!-- Tags -->
        <div class="guy-tags">
          <span class="guy-tag">5.9"</span>
          <span class="guy-tag">Making spirits bright</span>
          <span class="guy-tag">Naughty and nice</span>
        </div>
      </div>
      
      <!-- Diagonal Golden Line -->
      <div class="diagonal-line"></div>
      
      <!-- Image Section (RIGHT) -->
      <div class="guy-image-container">
        <div class="image-wrapper">
          <!-- Carousel Images (character, action, action2) -->
          <img 
            src="/guys/jt/jt-character.png" 
            alt="JT - Santa Claus"
            class="carousel-image active"
            data-carousel="0"
            loading="lazy"
          />
          <img 
            src="/guys/jt/jt-action.png" 
            alt="JT in Action"
            class="carousel-image"
            data-carousel="1"
            loading="lazy"
          />
          <img 
            src="/guys/jt/jt-action2.png" 
            alt="JT Action Scene"
            class="carousel-image"
            data-carousel="2"
            loading="lazy"
          />
          
          <!-- Hover Image -->
          <img 
            src="/guys/jt/jt-hoover.png" 
            alt="JT Special"
            class="hover-image"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>
  
  